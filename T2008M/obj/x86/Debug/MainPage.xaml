<Page
    x:Class="T2008M.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:T2008M"
    xmlns:models="using:T2008M.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <SplitView x:ConnectionId='2' x:Name="SP" OpenPaneLength="180" DisplayMode="CompactInline" IsPaneOpen="True">
        <SplitView.Pane>
            <RelativePanel>
                <FontIcon x:ConnectionId='3'                          x:Name="Click" FontFamily="Segoe MDL2 Assets" Glyph="&#xE700;"  Margin="12,20,0,0"/>
                <ListView x:ConnectionId='4'                      x:Name="Menu" Margin="0,10,0,0" RelativePanel.Below="Click">
                    <ListView.ItemTemplate>
                        <DataTemplate                             >
                            <ListViewItem x:ConnectionId='6'                             >
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <FontIcon x:ConnectionId='7' Grid.Column="0" FontFamily="Segoe MDL2 Assets"                        Margin="0,8,0,0"/>
                                    <TextBlock x:ConnectionId='8' Grid.Column="1"                      Margin="20,8,0,0"/>
                                </Grid>
                            </ListViewItem>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </RelativePanel>
        </SplitView.Pane>
        <SplitView.Content>
            <ScrollViewer Margin="10">
                <Frame x:ConnectionId='9' x:Name="MainFrame" />
            </ScrollViewer>
        </SplitView.Content>
    </SplitView>

</Page>

